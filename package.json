{
  "name": "vite-config-preset",
  "version": "1.5.0",
  "description": "Minko's preset vite config",
  "type": "module",
  "keywords": [
    "vite config"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hemengke1997/vite-config-preset.git"
  },
  "author": "hemengke <https://github.com/hemengke1997>",
  "files": [
    "*.d.ts",
    "dist"
  ],
  "main": "./dist/node/index.cjs",
  "module": "./dist/node/index.js",
  "types": "./dist/node/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/node/index.d.ts",
      "require": "./dist/node/index.cjs",
      "import": "./dist/node/index.js"
    },
    "./client": {
      "types": "./client.d.ts",
      "require": "./dist/client/index.cjs",
      "import": "./dist/client/index.js"
    },
    "./plugin": {
      "types": "./plugin.d.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev": "rm -rf dist && tsup --watch",
    "build": "rm -rf dist && tsup",
    "commitlint": "commitlint --edit",
    "prepare": "simple-git-hooks",
    "lint": "tsc --noEmit && eslint . --fix",
    "up": "taze -I -w",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "bump": "bumpp package.json -c --no-push -t --all -x \"npm run changelog\""
  },
  "peerDependencies": {
    "@vitejs/plugin-legacy": ">=5",
    "@vitejs/plugin-react": ">=4",
    "vite": ">=6.0.0"
  },
  "peerDependenciesMeta": {
    "@vitejs/plugin-legacy": {
      "optional": true
    },
    "@vitejs/plugin-react": {
      "optional": true
    }
  },
  "dependencies": {
    "debug": "^4.4.0",
    "deepmerge": "^4.3.1",
    "fast-glob": "^3.3.2",
    "get-tsconfig": "^4.8.1",
    "local-pkg": "^0.5.1",
    "picologger": "^0.0.1",
    "rollup-plugin-visualizer": "^5.13.1",
    "vite-plugin-json5": "^1.1.6",
    "vite-plugin-svgr": "^4.3.0",
    "vite-plugin-vconsole": "^2.1.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@minko-fe/commitlint-config": "^2.1.2",
    "@minko-fe/eslint-config": "^4.1.1",
    "@minko-fe/prettier-config": "^2.2.3",
    "@minko-fe/tsconfig": "^2.1.1",
    "@types/debug": "^4.1.12",
    "@types/lodash-es": "^4.17.12",
    "@vitejs/plugin-legacy": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "bumpp": "^9.9.2",
    "conventional-changelog-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.18.0",
    "tsup": "^8.3.5",
    "tsup-plugin-bundleless": "^1.2.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.6"
  },
  "simple-git-hooks": {
    "commit-msg": "npm run commitlint",
    "pre-commit": "npm run lint"
  },
  "commitlint": {
    "extends": [
      "@minko-fe/commitlint-config"
    ]
  },
  "prettier": "@minko-fe/prettier-config"
}
