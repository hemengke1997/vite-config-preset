{
  "name": "vite-config-preset",
  "version": "2.2.0",
  "description": "Minko's preset vite config",
  "type": "module",
  "keywords": [
    "vite config"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hemengke1997/vite-config-preset.git"
  },
  "author": "hemengke <https://github.com/hemengke1997>",
  "files": [
    "*.d.ts",
    "dist"
  ],
  "main": "./dist/node/index.cjs",
  "module": "./dist/node/index.js",
  "types": "./dist/node/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/node/index.d.ts",
      "require": "./dist/node/index.cjs",
      "import": "./dist/node/index.js"
    },
    "./isomorph": {
      "types": "./isomorph.d.ts",
      "require": "./dist/isomorph/index.cjs",
      "import": "./dist/isomorph/index.js"
    },
    "./plugin": {
      "types": "./plugin.d.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev": "rm -rf dist && tsup --watch",
    "build": "rm -rf dist && tsup",
    "commitlint": "commitlint --edit",
    "prepare": "simple-git-hooks",
    "lint": "tsc --noEmit && eslint . --fix",
    "up": "taze -I -w",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "bump": "bumpp package.json -c --no-push -t --all -x \"npm run changelog\""
  },
  "peerDependencies": {
    "@vitejs/plugin-legacy": ">=5",
    "@vitejs/plugin-react": ">=4",
    "vite": ">=5"
  },
  "peerDependenciesMeta": {
    "@vitejs/plugin-legacy": {
      "optional": true
    },
    "@vitejs/plugin-react": {
      "optional": true
    }
  },
  "dependencies": {
    "debug": "^4.4.1",
    "deepmerge": "^4.3.1",
    "fast-glob": "^3.3.3",
    "get-tsconfig": "^4.10.1",
    "local-pkg": "^1.1.1",
    "picologger": "^1.0.0",
    "rollup-plugin-visualizer": "^6.0.0",
    "vite-plugin-json5": "^1.1.9",
    "vite-plugin-svgr": "^4.3.0",
    "vite-plugin-vconsole": "^2.1.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@minko-fe/commitlint-config": "^2.2.0",
    "@minko-fe/eslint-config": "^4.2.3",
    "@minko-fe/prettier-config": "^2.2.6",
    "@minko-fe/tsconfig": "^2.1.2",
    "@types/debug": "^4.1.12",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.21",
    "@vitejs/plugin-legacy": "^6.1.1",
    "@vitejs/plugin-react": "^4.5.0",
    "bumpp": "^10.1.1",
    "conventional-changelog-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.27.0",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "simple-git-hooks": "^2.13.0",
    "taze": "^19.1.0",
    "tsup": "^8.5.0",
    "tsup-plugin-bundleless": "^1.3.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "simple-git-hooks": {
    "commit-msg": "npm run commitlint",
    "pre-commit": "npm run lint"
  },
  "commitlint": {
    "extends": [
      "@minko-fe/commitlint-config"
    ]
  },
  "prettier": "@minko-fe/prettier-config"
}
